{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    /* Modules */
    "moduleResolution": "bundler",
    // "allowImportingTsExtensions": true,

    /* Emit */
    "noEmit": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Interop Constraints */
    // "esModuleInterop": true, /* If we set moduleResolution to node, etc. we need to turn this on for safer imports */

    /* Language and Environment */
    "target": "ES2024",
    "lib": ["ES2024"],
    "types": ["node"]
  }
}
